<Window x:Class="ModBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModBuilder"
        mc:Ignorable="d"
        Title="CollectorsEdition Modbuilder" Height="450" Width="720">

    <DockPanel>
        <Menu DockPanel.Dock="Top" VerticalAlignment="Top">
            <MenuItem Header="Edit">
                <MenuItem Header="Set Mod" Click="SetMod_Click"></MenuItem>
                <MenuItem Header="Set Mod Folder" Click="SetModFolder_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl VerticalAlignment="Stretch" >
            <TabItem Header="Manifest">
                <local:ManifestControl/>
            </TabItem>
            <TabItem Header="Bodyparts">
                <local:BodypartControl/>
            </TabItem>
            <TabItem Header="NPCs">
                <Grid Background="#FFE5E5E5">
                    <Label Content="TODO" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="400"/>

                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>


</Window>
